{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Django Server (OctoFit)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/octofit-tracker/backend/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "octofit_tracker.settings"
            },
            "console": "integratedTerminal"
        }
    ]
}
